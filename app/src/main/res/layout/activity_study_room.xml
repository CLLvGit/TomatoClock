<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/study_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unknown"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/study_room_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始时间：unknown"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/study_room_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自习总时长：unknown"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/study_room_mem_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前人员："
        android:textSize="24sp" />

    <TextView
        android:id="@+id/study_room_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="24sp" />

    <Button
        android:id="@+id/leave_study_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="leaveRoom"
        android:text="退出自习室"
        android:translationX="300dp"
        android:translationY="300dp" />
</LinearLayout>